+// count the number of processes whose state is not UNUSED
+int
+nproc(void)
+{
+  struct proc *p;
+  int count = 0;
+  for(p = proc; p < &proc[NPROC]; p++){
+    acquire(&p->lock);
+    if(p->state != UNUSED){
+      ++count;
+    }
+    release(&p->lock);
+  }
+  return count;
+}
